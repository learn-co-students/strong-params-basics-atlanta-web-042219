<h1>New Post Form</h1>

<ul>
	<% @post.errors.full_messages.each do |error| %>
		<li style="color: red;"><%= error %></li>
	<% end %>
</ul>

<%= form_for(@post) do |f| %>
  <label>Post title:</label><br>
  <%= f.text_field :title %><br>

  <label>Post Description</label><br>
  <%= f.text_area :description %><br>

  <%= f.submit %>
<% end %>